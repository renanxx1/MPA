<%- include ('../partials/header.ejs')%>
<link rel="stylesheet" href="/assets/css/shared/style2.css">
    <%- include ('../partials/navbar.ejs')%>
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid">
                    <h1 class="mt-4">Editar Administrador</h1>
                    <ol class="breadcrumb mb-4">
                        <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                        <li class="breadcrumb-item active"><a href="/admin">Admin</a></li>
                        <li class="breadcrumb-item active">Editar</li>
                    </ol>
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Edição Administrador</h5>
                            <div class="float-right" style="margin-top: -4%; ">
                                <div class="mx-auto text-center">
                                    <label>Colaborador</label>
                                    <br>
                                    <div class="btn-group btn-toggle">
                                        <button class="btn btn-sm btn-default" data-toggle="tooltip"
                                            data-placement="bottom"
                                            title="Transformar este Administrador em Colaborador">SIM</button>
                                        <button class="btn btn-sm btn-dark" data-toggle="tooltip"
                                            data-placement="bottom"
                                            title="Transformar este Administrador em Colaborador">NAO</button>
                                    </div>
                                </div>
                            </div>

                            <form action="/admin/editar/<%=admin.id%>" method="POST">
                                <input type="hidden" id="adminOnOff" name="inputAdminOnOff" value="0">
                                <div class="form-group">
                                    <label class="mt-3">Nome do Administrador</label><text
                                    style="color: red;"> *</text>
                                    <input type="login" class="form-control" name="inputAdministrator" placeholder="Alterar o nome do administrador para..."
                                       value="<%=admin.admin_name%>" required>
                                </div>
                                <div class="form-group">
                                    <input type="hidden" class="form-control" name="id" value="<%=admin.id%>">
                                    <label>Login</label><text
                                    style="color: red;"> *</text>
                                    <input type="login" class="form-control" name="inputLogin" placeholder="Alterar login para..." value="<%=admin.login%>" id="loginId"
                                        required>
                                </div>
                                <div class="form-group">
                                    <label>Senha</label><text
                                    style="color: red;"> *</text>
                                    <input type="password" class="form-control" name="inputPassword"
                                    placeholder="*********"
                                    id="passwordId">
                                </div>
                                
                                <button type="submit" class="btn btn-dark mt-2" id="btnAlterar"
                                    onclick="removerAttr()">Alterar</button>
                            </form>


                            <% if(statusCode==201){%>
                                <div class="alert alert-success mt-3" role="alert">
                                    Atualizado com sucesso!
                                </div>
                                <% } %>
                                    <% if(statusCode==406){%>
                                        <div class="alert alert-danger mt-3" role="alert">
                                            Erro: Login ja cadastrado no sistema.
                                        </div>
                                        <% } %>
                        </div>
                    </div>

                    <div class="modal fade" id="modalAdmin" tabindex="-1" role="dialog"
                    aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title" id="exampleModalLongTitle">ATENÇÃO!</h4>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body text-center">
                                <b>
                                    Este Administrador será transformado em Colaborador.
                                    <br>
                                    Sera bloqueado o acesso ao Painel Administrativo/Dashboards.
                                </b>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">OK</button>
                            </div>
                        </div>
                    </div>
                </div>
                <br>
            </main>
            <%- include ('../partials/footer.ejs')%>
                </html>


                <script>

                    var count = 0;
                    $('.btn-toggle').click(function () {
                        count++;
                        $(this).find('.btn').toggleClass('btn-dark');
                        if (count % 2 == 1) {
                            $('#modalAdmin').modal().show()
                        }
                        $('#adminOnOff').val(count);
                    });


                </script>