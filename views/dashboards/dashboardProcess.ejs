                    } else {
                        $('#smallDateInfo').html("");
                    }





                    /*-----------------------------------------------------------------------------------------------------------*/
                    //CARREGANDO DADOS NO GRAFICO DE BARRAS - 1


                    data.chronometers.forEach(element => {
