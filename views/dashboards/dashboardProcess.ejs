                        var a = hms.split(':');
                        var seconds = (+a[0]) * 60 * 60 + (+a[1]) * 60 + (+a[2]);
                        myBarChart.data.datasets[0].data.push(seconds);
                    }
                    myBarChart.update()
                })
            }
